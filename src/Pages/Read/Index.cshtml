@page "{id}"
@model ReadModel
@{
    ViewData["Title"] = "Developer Read";
}
<h1>@ViewData["Title"]</h1>

<div class="container read-card">
    <h3>@Model.Product.Maker</h3>
    <p>@Model.Product.Title</p>
    <img src="@Model.Product.Image" />
    <p class="description">@Model.Product.Description</p>
    <a class="btn btn-primary" asp-area="" asp-page="/update/Index" asp-route-id="@Model.Product.Id">Update</a>
    <a class="btn btn-danger" asp-area="" asp-page="/Delete/Index" asp-route-id="@Model.Product.Id">Delete</a>
</div>